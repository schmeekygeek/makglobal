---
import Button from "@components/ui/Button.astro";
import Input from "@components/ui/form/Input.astro";
import Textarea from "@components/ui/form/Textarea.astro";
import Radio from "@components/ui/form/Radio.astro";
import Checkbox from "@components/ui/form/Checkbox.astro";
import Select from "@components/ui/form/Select.astro";

const hearAboutOptions = [
    { label: "Search Engine", value: "search" },
    { label: "Social Media", value: "social" },
    { label: "Trade Fair/Exhibition", value: "event" },
    { label: "Referral", value: "referral" },
    { label: "Other", value: "other" }
];

const interestOptions = [
    { label: "Import Services", value: "import" },
    { label: "Export Services", value: "export" },
    { label: "Customs Clearance", value: "customs" },
    { label: "Freight Forwarding", value: "freight" },
    { label: "Warehousing & Storage", value: "warehouse" }
];

const serviceOptions = [
    { label: "Product Import Assistance", value: "import-assist" },
    { label: "Export Documentation", value: "export-docs" },
    { label: "Door-to-Door Logistics", value: "door-logistics" },
    { label: "Customs Brokerage", value: "customs" },
    { label: "Consulting & Compliance", value: "consulting" }
];

const budgetOptions = [
    { label: "$1,000 - $5,000", value: "1-5k" },
    { label: "$5,000 - $20,000", value: "5-20k" },
    { label: "$20,000 - $100,000", value: "20-100k" },
    { label: "$100,000+", value: "100k+" }
];

const formBackground = 'light';
---
<form class="space-y-6 bg-white p-6 rounded-lg">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <Input
            label="Full Name"
            id="name"
            name="name"
            required
            background={formBackground}
        />
        <Input
            label="Email Address"
            type="email"
            id="email"
            name="email"
            required
            background={formBackground}
        />
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <Input
            label="Phone Number"
            type="tel"
            id="phone"
            name="phone"
            background={formBackground}
        />
        <Input
            label="Company Name"
            id="company"
            name="company"
            background={formBackground}
        />
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <Radio
            label="How did you hear about us?"
            id="hear-about"
            name="hear-about"
            options={hearAboutOptions}
            required
            background={formBackground}
        />
        <Checkbox
            label="Interested In"
            id="interests"
            name="interests"
            options={interestOptions}
            background={formBackground}
        />
    </div>

    <Textarea
        label="Tell us about your requirements"
        id="message"
        name="message"
        required
        background={formBackground}
    />

    <Checkbox
        label="I agree to the terms and conditions"
        id="terms"
        name="terms"
        required
        background={formBackground}
    />

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <Select
            label="What service are you interested in?"
            id="service"
            name="service"
            options={serviceOptions}
            required
            placeholder="Choose a service"
            background={formBackground}
        />
        <Select
            label="Estimated Budget"
            id="budget"
            name="budget"
            options={budgetOptions}
            required
            placeholder="Select your budget"
            background={formBackground}
        />
    </div>

    <div class="mt-6">
        <Button>Submit Inquiry</Button>
    </div>
</form>
