---
import Layout from '@layouts/Layout.astro';
import Hero from '@components/sections/Hero.astro';
import SplitPanel from '@components/sections/SplitPanel.astro';
import Features from '@components/sections/Features.astro';
import Stats from '@components/sections/Stats.astro';
import { featureLists } from '@data/features';
import { statsLists } from '@data/stats';
import Logos from '@components/sections/Logos.astro';
import { logoLists } from '@data/logos';
import CtaBanner from '@components/sections/CtaBanner.astro';
import Faqs from '@components/sections/Faqs.astro';
import { faqLists } from '@data/faqs';
import RecentPosts from '@components/sections/RecentPosts.astro';
import heroImage from '../assets/images/home/default-hero-2.jpg';
import styleGuideImage from '../assets/images/home/developer.jpg';

const seoTitle = "FZC Import Export Solutions | Trusted Worldwide Trade Partner";
const seoDescription = "We provide reliable import-export services connecting global markets with seamless logistics and trusted partnerships.";

const heroContent = {
    title: 'FZC Import Export Solutions\nTrusted Worldwide Trade Partner',
    description: 'We provide reliable import-export services connecting global markets with seamless logistics and trusted partnerships.',
    buttons: [
        {
            text: 'Get Started',
            link: '/contact',
            target: '_self'
        },
    ],
    backgroundImage: heroImage,
    overlayOpacity: 0.2
}

const featuresSection = {
    eyebrow: "OUR SERVICES",
    title: "Reliable, Fast & Compliant Trade Solutions",
    description: "At FZC Imports and Exports, we simplify international trade with efficient logistics, real-time tracking, and secure compliance systems tailored for global business needs.",
    features: featureLists.main.features,
    button: {
        text: "Explore Services",
        link: "/services",
        variant: "primary" as const
    }
}

const FooterCta = {
    eyebrow: "Partner With Us",
    title: 'Streamline Your Global Trade With FZC',
    description: 'Join a growing network of businesses that rely on FZC Import Export Solutions for trusted, end-to-end international shipping and supply chain management.',
    hideCta: false,
    button: {
        text: 'Contact Us Today',
        link: '/contact',
        target: '_self'
    }
}

const styleGuideSection = {
    eyebrow: "Our Process",
    headline: "Efficient & Transparent Operations",
    description: "From initial documentation to final delivery, our process ensures that every shipment meets global standards and arrives on time. Transparency and efficiency are at the heart of how we operate.",
    image: {
        src: styleGuideImage,
        alt: "Efficient trade logistics"
    },
    buttons: [
        {
            text: "Learn More About Our Process",
            link: "/about",
            variant: "primary" as const
        }
    ]
}

const sideBySideStats = {
    eyebrow: "Our Impact",
    title: "Proven Performance in Global Trade",
    description: "With hundreds of shipments delivered safely across continents, our numbers speak for themselves. We measure success by speed, safety, and satisfaction.",
    variant: 'side-by-side' as const,
    stats: statsLists.withContent.stats,
    content: {
        title: "Why Businesses Trust FZC",
        description: "Our commitment to timely deliveries, customer service, and compliance with international standards has made us a preferred partner for businesses of all sizes.",
        button: {
            text: "Discover Our Solutions",
            link: "/services",
            variant: "primary" as const
        }
    }
};

const mainCta = {
    eyebrow: "Let’s Get Started",
    title: "Your Gateway to Global Trade",
    description: "Whether you're importing, exporting, or both — FZC is here to handle the logistics so you can focus on growing your business.",
    button: {
        text: "Request a Quote",
        link: "/contact",
        variant: "primary" as const,
        target: "_self" as const
    }
};

const logosSection = {
    eyebrow: "Our Partners",
    logos: logoLists.main.logos
}

const faqsSection = {
    eyebrow: "FAQs",
    title: 'Frequently Asked Questions',
    description: 'Find answers to common questions about our import-export process, customs, and logistics services.',
    faqs: faqLists.main.faqs
}

const recentPostsSection = {
    eyebrow: "INSIGHTS & UPDATES",
    title: "Stay Informed on Global Trade Trends",
    description: "Read our latest updates on market trends, shipping tips, and regulatory changes that could impact your import-export business.",
    button: {
        text: "Read More Articles",
        link: "/blog",
        variant: "primary" as const
    }
}
---

<Layout footerCta={FooterCta} title={seoTitle} description={seoDescription}>
    <Hero content={heroContent} />
    <Features content={featuresSection} padding="base" background="light" />
    <RecentPosts content={recentPostsSection} background="base" padding="base" postsToShow={3} category="Trade Insights"/>
    <SplitPanel content={styleGuideSection} imagePosition="right" background="light" padding="base" />
    <CtaBanner content={mainCta} variant="contained" background="light" paddingBottom="base" />
    <Logos content={logosSection} background="base" padding='small'/>
    <Stats content={sideBySideStats} background='dark' padding="base"/>
    <Faqs content={faqsSection} background="base" padding="base" />
</Layout>
